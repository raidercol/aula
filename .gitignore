public class metodos {
    public int calculaPar(int[] v){
        int par = 0;
        for(int i = 0; i < v.length; i++){
            if(v[i] % 2 == 0){
                par ++;
            }
        }
        return par;
    }
    public int calculaImpar(int[] p){
        int impar = 0;
        for(int x  =0; x<p.length; x++){
            if(p[x] % 2 != 0){
                impar++;
            }
        }
        return impar;
    }
}

