public class desafio{

    public static int encontraMaior(int[] v){
        int maior = 0;
        for(int i = 0; i < v.length; i++){
            if(maior < v[i]){
                maior = v[i];
            }
        }
        return maior;
    }


    public static void main(String[] args) {

        int[] v = new int[10];
        for(int i = 0; i < v.length ; i++){
            v[i]=0;
        }
        v[1]=10;
        v[3]=28;
        v[6]=20;
        System.out.println("maior: " + encontraMaior(v));
    }
}
